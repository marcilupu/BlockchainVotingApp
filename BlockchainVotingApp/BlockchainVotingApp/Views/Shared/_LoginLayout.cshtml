    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" asp-append-version="true" />
    <script src="https://kit.fontawesome.com/76c2720fae.js" crossorigin="anonymous"></script>
</head>
<body style="margin:0">
    <div class="bg-image" style="background-image: url('/media/bg.jpg');height: 100vh;">
