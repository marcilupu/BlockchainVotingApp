@model BlockchainVotingApp.Models.User.ViewModels.UserViewModel

@{
    Layout = "_Homelayout";
}

<div class="row p-4">
    <div class="col">
        <div class="card shadow p-3 mb-1 rounded h-100">
            <div class="card-header p-3">
                <h4>@Model.FullName<i class="fa-solid fa-circle-check text-primary p-2"></i></h4>
            </div>
            <div class="card-body">
                <ul class="list-group">
                    <li class="list-group-item d-flex justify-content-between align-items-center border-light shadow p-3 mb-4">
                        <h5>Profile details</h5>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-light">
                        Email
                        <span class="fw-bold text-center">@Model.Email</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-light">
                        County
                        <span class="fw-bold text-center">@Model.CountyName</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="row p-4">
    <div class="col">
        <form action="/User/ChangePassword" method="post">
            <div class="row p-4">
                <div class="col">
                    <div class="card shadow p-3 mb-1 rounded h-100">
                        <div class="card-body">
                            <ul class="list-group">
                                <li class="list-group-item d-flex justify-content-between align-items-center border-light shadow p-3 mb-3">
                                    <h5>Change password</h5>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-light">
                                    Username
                                    <span class="w-25"><input type="text" name="email" class="form-control" placeholder="Email" value=@Model.Email readonly></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-light">
                                    Current password
                                    <span class="w-25"><input type="password" name="currentPassword" class="form-control" placeholder=""></span>
                                </li>
                                <li class="list-group-item d-flex justify-content-between align-items-center border-light">
                                    New password
                                    <span class="w-25"><input type="password" name="newPassword" class="form-control" placeholder=""></span>
                                </li>
                            </ul>
                        </div>
                        <div class="card-footer">
                            <span class="text-center"><button type="submit" class="btn btn-primary float-end">Save changes</button></span>
                        </div>
                    </div>

                </div>
            </div>
        </form>
    </div>
</div>